@model List<Model.EF.Product>

<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            @foreach (var item in Model.Where(x => x.ProductID== "STN_T001"))
                            {
                                <div class="col-sm-6">
                                    <h1><span>DT</span>-BOOKSHOP</h1>
                                    <h2>@item.NameBook</h2>
                                    <p>@item.Describe</p>
                                    <a href="/product/Detail/@item.ProductID" class="btn btn-primary">MUA NGAY</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Content/images/product/@item.ImageID" class="girl img-responsive" alt="" />
                                </div>

                            }
                        </div>
                        @foreach (var item in Model.Where(x => x.NxbID == "2"))
                        {
                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>DT</span>-BOOKSHOP</h1>
                                    <h2>@item.NameBook</h2>
                                    <p>@item.Describe</p>
                                    <a href="/product/Detail/@item.ProductID" class="btn btn-primary">MUA NGAY</a>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Content/images/product/@item.ImageID" class="girl img-responsive" alt="" />
                                </div>

                            </div>
                        }
                    </div>
                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section><!--/slider-->
