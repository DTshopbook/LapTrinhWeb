@model PagedList.IPagedList<Model.EF.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main_container">
    @{Html.RenderAction("LeftMenu", "Home"); }

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Danh sách danh mục</h3>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên danh mục</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.CategoryID">

                                        <td>@item.CategoryID</td>
                                        <td>@item.CategoryName</td>
                                        <td><a>@Html.Raw(item.Statuss ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>
                                        @*<td><a href="#" class="btn-active2" data-id="@item.CategoryID">@Html.Raw(item.Statuss ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>*@
                                        <td> 
                                            <a href="/Admin/Category/EditCate/@item.CategoryID">Sửa</a>
                                            @*|
                                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.CategoryID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn chắc chắn muốn xóa danh mục này?",
                                           OnComplete = "$('#row_" + @item.CategoryID + "').remove()",
                                           HttpMethod = "Delete"
                                       })*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
    <!-- /page content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            Admin - DTShopBook
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Areas/Admin/Content/build/js/jquery.unobtrusive-ajax.min.js"></script>