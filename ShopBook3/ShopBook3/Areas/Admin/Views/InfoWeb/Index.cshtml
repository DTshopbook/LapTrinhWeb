@model PagedList.IPagedList<Model.EF.InfoWebsite>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}

<div class="main_container">
    @{Html.RenderAction("LeftMenu", "Home"); }

    <div class="right_col" role="main">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Thông tin Website</h3>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên Website</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Webname</td>
                                        <td>@item.WebAddress</td>
                                        <td>@item.WebPhone</td>
                                        <td>@item.WebEmail</td>
                                        <td>
                                            <a href="~/Admin/InfoWeb/Edit/@item.Webname">Sửa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
    <!-- /page content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            Admin - DTShopBook
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>


