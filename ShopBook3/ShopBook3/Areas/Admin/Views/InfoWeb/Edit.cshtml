@model Model.EF.InfoWebsite
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main_container">
    @{Html.RenderAction("LeftMenu", "Home"); }

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Chỉnh sửa Thông tin Website</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("Edit", "InfoWeb", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            @*@Html.LabelFor(model => model.CategoryID, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                            <h5>Tên Website</h5>
                                            @Html.EditorFor(model => model.Webname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Webname, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @*@Html.LabelFor(model => model.WebAddress, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                            <h5>Địa chỉ</h5>
                                            @Html.EditorFor(model => model.WebAddress, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.WebAddress, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @*@Html.LabelFor(model => model.WebPhone, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                            <h5>Số điện thoại</h5>
                                            @Html.EditorFor(model => model.WebPhone, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.WebPhone, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            @*@Html.LabelFor(model => model.WebEmail, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                            <h5>Email</h5>
                                            @Html.EditorFor(model => model.WebEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.WebEmail, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="CẬP NHẬT" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            <div>
                                @Html.ActionLink("Quay về", "Index")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            Admin - DTShopBook </a>
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>


