
@{
    ViewBag.Title = "Total";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer1", {
	        animationEnabled: true,
	        theme: "light2", // "light1", "light2", "dark1", "dark2"
	        title: {
		        text: "Số lượng cuốn sách bán được theo mã sách"
	        },
	        axisY: {
		        title: "Số lượng"
	        },
            data: [{
                type: "column",
		        dataPoints: @Html.Raw(ViewBag.DataPoints)
	        }]
        });
        chart.render();

        }
</script>

<div class="main_container">
    @{Html.RenderAction("LeftMenu", "Home"); }

    <!-- page content -->
    <div class="right_col" role="main">
        <!-- top tiles -->
        <div class="row tile_count">
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <span class="count_top"><i class="fa fa-user"></i> Tổng khách hàng</span>
                <div class="count">@ViewBag.TotalCus</div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <span class="count_top"><i class="fa fa-user"></i>Tổng sản phẩm bán được</span>
                <div class="count">@ViewBag.TotalAmount</div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6 tile_stats_count">
                <span class="count_top"><i class="fa fa-clock-o"></i>Tổng doanh thu</span>
                <div class="count">@ViewBag.TotalMoney VND</div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="chartContainer1" style="height: 370px; width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script><!-- /.panel-body -->
    <!-- /page content -->
    <script src="~/Areas/Admin/Content/build/js/Chart/jquery.canvasjs.min.js"></script>
    <script src="~/Areas/Admin/Content/build/js/Chart/Char.js"></script>
    <!-- footer content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            Admin - DTShopBook
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>

