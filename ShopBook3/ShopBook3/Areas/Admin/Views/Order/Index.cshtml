@model PagedList.IPagedList<Model.EF.Order>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script>
    var page = 0;
    var pageCount = @(ViewBag.PageCount);
    function fnloadPage() {
        $.ajax({
            url: "~/Order/Paginate",
            data: { page: page },
            success: function (res) {
                $("#results").html(res);
            }
        });
    }

    $(function){
        fnloadPage();

        $(".pager a").click(function () {
            eval("page = (pageCount + " + $(this).attr("href") + ") % pageCount");
            fnloadPage();
            return false;
        });
    }
</script>
<div class="main_container">
    @{Html.RenderAction("LeftMenu", "Home"); }

    <!-- page content -->
    <div class="right_col" role="main">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Danh sách đơn hàng</h3>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">                   
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Ngày tạo</th>
                                        <th>Tên khách hàng</th>
                                        <th>Địa chỉ</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr id="row_@item.OrderID">

                                        <td>@item.OrderID</td>
                                        <td>@item.CreateDate</td>
                                        <td>@item.UserRealName</td>
                                        <td>@item.UserAddress</td>
                                        <td>@item.UserPhone</td>
                                        <td>@item.UserEmail</td>
                                        <td><a href="#" class="btn-active3" data-id="@item.OrderID">@Html.Raw(item.Status ? "<strong>Chưa hoàn thành</strong>" : "Đã hoàn thành")</a></td>
                                        @*<td>@item.Status</td>*@
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            @*<div class="row" id="results"></div>
                            <ul class="pager">
                                <li><a href="0">|<<</a></li>
                                <li><a href="--page"><<</a></li>
                                <li><a href="++page">>></a></li>
                                <li><a href="-1">>>|</a></li>
                            </ul>*@
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
    <!-- /page content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            Admin - DTShopBook
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>


