@model PagedList.IPagedList<Model.EF.Product>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

@{Html.RenderAction("Slider", "Home"); }
<section>
    <div class="container">
        <div class="row">
            @{Html.RenderAction("CateProduct", "Product"); }
            <!--All product-->
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">TẤT CẢ SẢN PHẨM</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <a href="/product/Detail/@item.ProductID"><img src="~/Content/images/product/@item.ImageID" alt="" /></a>
                                        <h4>@item.NameBook</h4>
                                        <span><h3>@item.Price.GetValueOrDefault(0).ToString("N0") đ</h3></span>
                                        <a href="/add-to-cart?productID=@item.ProductID&&amount=1" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>THÊM VÀO GIỎ</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div><!--features_items-->
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
            <!--/All product-->
        </div>
    </div>
</section>


